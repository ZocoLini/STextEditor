{
  "rules": [
    {
      "styleClass": "attribute",
      "regex": "\\b[a-zA-Z_:]*=",
      "highlightRegex": "\\b[a-zA-Z_:]*"
    },
    {
      "styleClass": "string",
      "regex": "\"[^\"]*\"",
      "highlightRegex": ""
    },
    {
      "styleClass": "comment",
      "regex": "<!--(.|\\v)+?-->",
      "highlightRegex": "<!--(.|\\v)+?-->"
    },
    {
      "styleClass": "tag",
      "regex": "</?[^<>]*/?>",
      "highlightRegex": "(</?[a-zA-Z0-9_\\.]*)|(/?>)|(<\\?)|(\\?>)"
    }
  ]
}
