<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900" prefWidth="1200" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lebastudios.stexteditor.iobjects.managers.nodemanagers.singletonmanagers.MainManager">
    <top>
        <MenuBar fx:id="menuBar" prefHeight="10">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" onAction="#newFile" text="New File" />
                <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open File" />
                <MenuItem mnemonicParsing="false" onAction="#saveActualTab" text="Save File" />
                <MenuItem mnemonicParsing="false" onAction="#saveActualFileAs" text="Save File As" />
                <SeparatorMenuItem />
                <MenuItem mnemonicParsing="false" onAction="#openNewProjectDirectory" text="Open Project" />
                <SeparatorMenuItem />
                <MenuItem mnemonicParsing="false" text="Settings" />
                <SeparatorMenuItem />
                <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem mnemonicParsing="false" text="Cut" />
                <MenuItem mnemonicParsing="false" text="Copy" />
                <MenuItem mnemonicParsing="false" text="Paste" />
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <MenuItem mnemonicParsing="false" text="About" />
            </Menu>
        </MenuBar>
    </top>

    <center>
        <SplitPane fx:id="terminalContainer" dividerPositions="0.5" orientation="VERTICAL">
            <SplitPane fx:id="codeTabPaneContainer" dividerPositions="0.1, 0.9" prefHeight="160.0" prefWidth="200.0" 
                       BorderPane.alignment="CENTER">
                <TreeView fx:id="proyectFileTreeView" prefHeight="200.0" prefWidth="174.0" />

                <TabPane fx:id="codeTabPane" tabClosingPolicy="ALL_TABS" />
                
                <BorderPane fx:id="notifications" prefHeight="200.0" prefWidth="200.0"/>
            </SplitPane>

            <TextArea fx:id="consoleTextArea" />
        </SplitPane>
    </center>

    <bottom>

    </bottom>

    <!-- Gestor de Ventanas -->
    <left>
        <VBox fx:id="leftVBox" prefWidth="30">
            <Button fx:id="botonProyectFileSystem" prefHeight="30" prefWidth="30" />
            <Button fx:id="botonNotificaciones" prefHeight="30" prefWidth="30" />
            <Button fx:id="botonTerminal" prefHeight="30" prefWidth="30" />
            <Button fx:id="botonCompilar" prefHeight="30" prefWidth="30" />
            <Button fx:id="botonEjecutar" prefHeight="30" prefWidth="30" />
        </VBox>
    </left>

    <!-- Acciones sobre el codigo -->
    <right>
    </right>
</BorderPane>
