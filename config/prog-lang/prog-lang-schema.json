{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "patternsInfo": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "pattern": {
            "type": "string"
          },
          "colourleablePattern": {
            "type": "string"
          }
        },
        "required": ["name", "pattern"]
      }
    }
  },
  "required": ["patternsInfo"]
}
