{
  "rules": [
    {
      "name": "tagName",
      "styleClass": "tag",
      "regex": "\u003c/?[a-zA-Z0-9_\\.]*",
      "highlightRegex": "[a-zA-Z0-9_\\.]*"
    },
    {
      "name": "comment",
      "styleClass": "comment",
      "regex": "\u003c!--(.|\\v)+?--\u003e",
      "highlightRegex": ""
    },
    {
      "name": "string",
      "styleClass": "string",
      "regex": "\"[^\"]*\"",
      "highlightRegex": ""
    },
    {
      "name": "attribute",
      "styleClass": "attribute",
      "regex": "\\b[a-zA-Z_:]*\u003d",
      "highlightRegex": "\\b[a-zA-Z_:]*"
    },
    {
      "name": "xmlFile",
      "styleClass": "tag",
      "regex": "\\?xml",
      "highlightRegex": ""
    }
  ]
}